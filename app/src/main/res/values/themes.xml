<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PlainActivity" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/canvas</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.PlainActivity</item>
    </style>

</resources>